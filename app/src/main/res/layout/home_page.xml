<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cardnew">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="159dp"
    android:src="@drawable/verify"
    android:id="@+id/img_verify"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_pay"
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:layout_width="179dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="90dp"
                    android:src="@drawable/images"
                    android:id="@+id/img_image"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Verification"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="#8f0d1c"
                    android:id="@+id/tv_vehicle"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:id="@+id/card_about"
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="50dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="159dp"
                    android:layout_height="89dp"
                    android:src="@drawable/cartoonmissing"
                    android:id="@+id/img_cartoon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Missing Vehicle"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="#8f0d1c"
                    android:id="@+id/tv_missing"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <android.support.v7.widget.CardView
            android:id="@+id/card_view_fuel"
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="50dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lo"
                    android:id="@+id/img_lo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Feedback"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="#8f0d1c"
                    android:id="@+id/tv_feedback"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="50dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="90dp"
                    android:src="@drawable/call"
                    android:id="@+id/img_call"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" About App"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="#8f0d1c"
                    android:id="@+id/tv_about"
                    />





            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>
