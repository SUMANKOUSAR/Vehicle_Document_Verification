<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardnew"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Missing"
        android:textSize="30sp"
        android:textColor="#006400"
        android:textStyle="bold"
        android:id="@+id/tv_vehiclemissing"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_marginTop="45dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="456dp"
            card_view:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingno"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="25dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Name"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingname"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint Details"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingcomplaint"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station name"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingstation"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingcity"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingaddress"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>

                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="20sp"
                    android:textColor="#8B0000"
                    android:id="@+id/tv_missingdate"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="16dp"/>
                />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>
